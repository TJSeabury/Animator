{
    "compilerOptions": {
        "sourceMap": false,
        "rootDir": "./src",
        "outDir": "./build",
        "target": "ES6",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "removeComments": false,
        "noImplicitAny": false,
        "skipLibCheck": true
    },
    "include": ["./src/**/*"],
    "exclude": ["./node_modules/*"]
}